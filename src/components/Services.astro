---
import data from "../data/services.json";
import "../styles/global.css";
---

<section class="services container-sm">
  <h2 class="sr-only">Services</h2>
  {
    data.map((service) => (
      <div class="service">
        <div class="text-white">
          <img
            src={`/${service.icon}.svg`}
            alt={service.name}
            width="80"
            height="80"
            loading="lazy"
            class="invert"
          />
          <h3 style="margin-top: 20px; margin-bottom: 20px">{service.name}</h3>
          <p class="text-muted">{service.content}</p>
        </div>
      </div>
    ))
  }
</section>
